<form method="post" action="{{ path('author_delete', {'id': author.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button class="btn btn-bookwoorm"><i class="fas fa-trash-alt"></i> Удалить</button>
</form>
