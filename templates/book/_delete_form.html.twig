<form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить эту книгу?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn-bookwoorm"><i class="fas fa-trash-alt"></i> Удалить</button>
</form>
